class Solution {
public:
    int strStr(string haystack, string needle) {
        int h = haystack.size();
        int n = needle.size();
        for (int i = 0; i < h; i++) {
            int j, k = i;
            for (j = 0; j < n && k < h; j++, k++) {
                if (haystack[k] != needle[j])
                    break;
            }
            if (j == n)
                return i;
        }
        return -1;
    }
};
