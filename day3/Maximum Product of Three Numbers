class Solution {
public:
    int maximumProduct(vector<int>& nums) {
        int product1, product2;
        int n = nums.size() - 1;
        sort(nums.begin(), nums.end());

        product1 = nums[n] * nums[n - 1] * nums[n - 2];
        product2 = nums[0] * nums[1] * nums[n];
        if (product1 > product2)
            return product1;
        else
            return product2;
    }
};
